<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.scxxwb.net.admin.modules.operation.dao.MerchantCategoryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.scxxwb.net.admin.modules.operation.entity.MerchantCategoryEntity" id="merchantCategoryMap">
        <result property="categoryId" column="category_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="name" column="name"/>
        <result property="categoryImg" column="category_img"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <select id="queryMerchantCategoryIdList" resultType="Integer">
		select category_id from merchant_category where parent_id = #{value}
	</select>


</mapper>